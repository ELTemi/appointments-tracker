<div class="container">
  <header><img src="images/recall-logo.jpg" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h1>Welcome, <%=@user.username%>
    <h2>Your Scheduled Appointments</h2>

    <div class="content wood_background">

      <h3 class="flash">
          <% if flash.has?(:message) %>
            <%= flash[:message] %>
          <% end %>
      </h3>

      <%@user.appointments.each do |appointment|%>
        <p>Title: <%=appointment.title%></p>
        <p>Date: <%=appointment.date%></p>
        <p>Where: <%=appointment.location%></p>
        <p>More details: <%=appointment.details%></p>
        <p>Status:
          <%=appointment.status %>
        </p>
      <%end%>

      <a href="/logout">Logout</a>
      </p>

    </div>

  </div>
</div>
