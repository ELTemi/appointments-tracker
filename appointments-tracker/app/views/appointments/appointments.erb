<div class="container">
  <header><img src="images/recall-logo.jpg" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h1>Welcome, <%=@user.username%>
    <h2>All Appointments</h2>
    <div class="content">

      <h3 class="flash">
          <% if flash.has?(:message) %>
            <%= flash[:message] %>
          <% end %>
      </h3>

      <%@appointments.each do |appointment|%>
        <h4><a href="/appointments/<%=appointment.id%>"><%=appointment.title%></a></h4><br>
        <p>Date: <%=appointment.date%></p>
        <p>Where: <%=appointment.location%></p>
        <p>More details: <%=appointment.details%></p>
      <%end%>
    </div>

    <div class="">
      <a href="/appointments/new">Create an appointment</a> <br>
      <a href="/logout">Logout</a>
    </div>

  </div>
</div>
