<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <h1>Welcome, <%=@user.username%>
    <h2>Create a New Appointment</h2>

    <div class="content">

      <h3 class="flash">
          <% if flash.has?(:message) %>
            <%= flash[:message] %>
          <% end %>
      </h3>

      <form action="/appointments" method="post">
        <h3>Title <br> <input type="text" name="title" id="title"></h3>
        <h3>Date <br> <input type="datetime-local" name="date" id="date"></h3>
        <h3>Location <br> <input type="text" name="location" id="location"></h3>
        <h3>Details <br> <input type="text" name="details" id="details"></h3>
        <h3><input type="submit" value="Submit"></h3>
      </form>
    </div>

    <div>
      <h3><a href="/logout">Logout</a></h3>
    </div>

  </div>
</div>
